= javascript_include_tag 'lightbox/js/lightbox-2.6.min.js'
= stylesheet_link_tag 'lightbox/css/lightbox.css'
%h2
  .row-fluid
    .text-left.span8
      Request:
    .text-right.span4
      = link_to 'Edit', edit_request_path(@request), class: 'btn btn-primary' if can? :update, Request
      = link_to 'Back', requests_path, class: 'btn btn-info'
      = link_to 'Destroy', @request, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if can? :destroy, Request
.row-fluid
  .span2.text-right
    %b Completed:
    %br
    %b Creation Date:
    %br
    %b Description:
    %br
    %b Last reviewed:
    %br
    %b Importance:
    %br
    %b User:
    %br
    %b Status:
    %br
    %b Location:
    %br
    %b Problem Area:
  .span10
    = (@request.completed == 1) ? 'Yes' : 'No'
    %br
    = @request.creation_date.strftime("%m-%d-%Y EST" ) if @request.creation_date
    %br
    = @request.description
    %br
    = @request.last_reviewed.strftime("%m-%d-%Y EST" ) if @request.last_reviewed
    %br
    = @request.importance.name if @request.importance
    %br
    = (@request.user.firstname + ' ' + @request.user.lastname)  if @request.user
    %br
    = @request.status.name if @request.status
    %br
    = @request.location.name if @request.location
    %br
    = @request.problem_area.name if @request.problem_area
%div
  = link_to(image_tag(@request.picture1.url, style: 'height: 200px', class: 'img-polaroid'),  @request.picture1.url, 'data-lightbox' => "roadtrip") if @request.picture1.exists?
  = link_to(image_tag(@request.picture2.url, style: 'height: 200px', class: 'img-polaroid'),  @request.picture2.url, 'data-lightbox' => "roadtrip") if @request.picture2.exists?
  = link_to(image_tag(@request.picture3.url, style: 'height: 200px', class: 'img-polaroid'),  @request.picture3.url, 'data-lightbox' => "roadtrip") if @request.picture3.exists?