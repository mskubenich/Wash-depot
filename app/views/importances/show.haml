%h2
  .row-fluid
    .text-left.span8
      Importance:
      = @importance.name
    .text-right.span4
      = link_to 'Edit', edit_importance_path(@importance), class: 'btn btn-primary'
      = link_to 'Back', importances_path, class: 'btn btn-info'
      = link_to 'Destroy', @importance, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'