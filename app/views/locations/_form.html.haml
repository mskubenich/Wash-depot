- if @location.errors.any?
  - @location.errors.full_messages.each do |msg|
    .alert.alert-error
      %button.close{type: :button, 'data-dismiss' => 'alert'}
      = msg
= form_for(@location, class: 'form-horizontal') do |f|
  .control-group
    .control-label
      Name:
    .controls
      = f.text_field :name, class: 'span6', rows: 4
  .control-group
    .controls
      = f.submit class: 'btn btn-info'