%h2
  .row-fluid
    .text-left.span8
      Location:
    .text-right.span4
      = link_to 'Edit', edit_location_path(@location), class: 'btn btn-primary'
      = link_to 'Back', locations_path, class: 'btn btn-info'
      = link_to 'Destroy', @location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%p
  %b
    Id:
  = @location.id
%p
  %b
    Name:
  = @location.name