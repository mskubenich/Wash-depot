%h2
  .row-fluid
    .text-left.span8
      Status:
      = @status.name
    .text-right.span4
      = link_to 'Edit', edit_status_path(@status), class: 'btn btn-primary'
      = link_to 'Back', status_path, class: 'btn btn-info'
      = link_to 'Destroy', @status, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'